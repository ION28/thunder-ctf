resources:
- name: {{ env['name'] + "-" properties['deployment']}}
  type: iam.v1.serviceAccount
  properties:
    accountId: {{ properties['id'] }}
    displayName: {{ properties['id'] }}
- name: role
  type: iam.v1.role
  properties:
    parent: projects/{{ env["project"] }}
    roleId: role-{{ properties["id"] }}
    role:
      title: Role for service account {{ properties["id"] }}
      includedPermissions:
      {% for permission in properties['permissions']}
      - {{permission}}
      {% endfor %}